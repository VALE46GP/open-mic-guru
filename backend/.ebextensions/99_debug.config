files:
  "/opt/elasticbeanstalk/hooks/appdeploy/pre/99_debug.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      echo "=== Debugging deployment ==="
      cd /var/app/staging
      echo "=== Current directory ==="
      pwd
      echo "=== Directory contents ==="
      ls -la
      echo "=== Package.json contents ==="
      cat package.json || echo "No package.json found"
      echo "=== Node version ==="
      node --version
      echo "=== NPM version ==="
      npm --version
      echo "=== End debug info ==="